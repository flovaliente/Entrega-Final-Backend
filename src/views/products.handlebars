<div class="table-responsive">
  {{#each products.docs}}
    <div class="container-products" id="seccionprod">
      <div class="products" id="{{this._id}}">
        <img src="/img/products/{{this.thumbnails}}" class="product__img" width="400" height="430" >
          <div class="product-description">
            <h3 class="product__title">{{this.title}}</h3>
            <span class="product-price">$ {{this.price}}</span>
          </div>
                      
        <a href="#" id="cart-dataa" data-cart-id="{{cid}}" onclick="addToCart('{{this._id}}')" role="button" class="btn btn-secondary">Comprar</a>
      </div>
    </div>
  {{/each}}
</div>
      
    

